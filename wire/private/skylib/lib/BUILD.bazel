load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

filegroup(
    name = "all_rules",
    srcs = glob(["**/*.bzl"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "versions",
    srcs = ["versions.bzl"],
    visibility = [
        "//wire:__subpackages__",
        "//wire/private:__subpackages__",
    ],
)
