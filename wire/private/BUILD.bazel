load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

filegroup(
    name = "all_rules",
    srcs = [
        "//wire/private/rules_go/lib:all_rules",
        "//wire/private/skylib/lib:all_rules",
    ] + glob(["**/*.bzl"]),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = [
        "//wire/private/rules:all_files",
        "//wire/private/rules_go/lib:all_files",
        "//wire/private/skylib/lib:all_files",
    ] + glob(["**"]),
    visibility = ["//visibility:public"],
)

bzl_library(
    name = "repo",
    srcs = [
        "repo.bzl",
        "//wire/private/rules_go/lib:platforms",
        "//wire/private/skylib/lib:versions",
    ],
    visibility = ["//wire:__subpackages__"],
)

bzl_library(
    name = "actions",
    srcs = [
        "actions.bzl",
        "//wire/private/skylib/lib:versions",
        "@io_bazel_rules_go//go:def",
    ],
    visibility = ["//wire:__subpackages__"],
)

bzl_library(
    name = "providers",
    srcs = [
        "providers.bzl",
    ],
    visibility = ["//wire:__subpackages__"],
)

bzl_library(
    name = "wire_toolchain",
    srcs = [
        "wire_toolchain.bzl",
        "//wire/private/rules_go/lib:platforms",
    ],
    visibility = ["//wire:__subpackages__"],
    deps = [
        "//wire/private:providers.bzl",
    ],
)

bzl_library(
    name = "release",
    srcs = [
        "release.bzl",
    ],
    visibility = ["//wire:__subpackages__"],
)
